        </step-definition>
        <step-definition id="nrcanStep" mandatory="true">
            <heading>submit.progressbar.nrcan</heading>
            <processing-class>org.dspace.app.rest.submit.step.DescribeStep</processing-class>
            <type>submission-form</type>
        </step-definition>
        <step-definition id="contentStep" mandatory="true">
            <heading>submit.progressbar.content</heading>
            <processing-class>org.dspace.app.rest.submit.step.DescribeStep</processing-class>
            <type>submission-form</type>
        </step-definition>
        <step-definition id="describeStep" mandatory="true">
            <heading>submit.progressbar.describe</heading>
            <processing-class>org.dspace.app.rest.submit.step.DescribeStep</processing-class>
            <type>submission-form</type>
        </step-definition>
        <step-definition id="referenceStep" mandatory="true">
